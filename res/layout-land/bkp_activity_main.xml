<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time" />

        <EditText
            android:id="@+id/edTime"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btLocalizar"
            android:layout_width="505dp"
            android:layout_height="wrap_content"
            android:text="@string/localizacao" />

        <Button
            android:id="@+id/btCalibrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:text="Calibrar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:layout_gravity="center_horizontal" >

            <ImageButton
                android:id="@+id/btAzul"
                android:layout_width="200dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_azul" />

            <ImageButton
                android:id="@+id/btAmarelo"
                android:layout_width="200dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_amarelo" />

            <ImageButton
                android:id="@+id/btVerde"
                android:layout_width="200dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_verde" />

            <ImageButton
                android:id="@+id/btVermelho"
                android:layout_width="200dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_vermelho" />

        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:columnCount="5"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btComendo"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_column="4"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="Comendo/Procurando (eating/seeking)" />

        <Button
            android:id="@+id/btRuminandoDeitado"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="Ruminando (Deitado)" />

        <Button
            android:id="@+id/btRuminandoEmPe"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="Ruminando (Em Pé)" />

        <Button
            android:id="@+id/btEmPe"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_gravity="top"
            android:layout_row="3"
            android:text="Em Pé (standing)" />

        <Button
            android:id="@+id/btDeitado"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_column="3"
            android:layout_gravity="top"
            android:layout_row="3"
            android:text="Deitado (lying)" />

        <Button
            android:id="@+id/btAndando"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_column="4"
            android:layout_gravity="top"
            android:layout_row="3"
            android:text="Andando (walking)" />

    </GridLayout>
	    
</LinearLayout>